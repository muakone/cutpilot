generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Project {
  id               String    @id @default(cuid())
  createdAt        DateTime  @default(now())
  totalDurationSec Int
  activeDraft      Int       @default(1)
  draft1Plan       String?   // JSON stored as text
  draft2Plan       String?   // JSON stored as text
  draft3Plan       String?   // JSON stored as text
  lastPlan         String?   // JSON stored as text
  segments         Segment[]
  videos           Video[]
}

model Video {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  filename    String
  filepath    String
  durationSec Float
  width       Int
  height      Int
  fps         Float
  codec       String
  thumbnail   String?
  uploadedAt  DateTime @default(now())

  @@index([projectId])
}

model Segment {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  label     String
  startSec  Int
  endSec    Int

  @@index([projectId])
}
